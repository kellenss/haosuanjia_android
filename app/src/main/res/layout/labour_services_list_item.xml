<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="@dimen/size_70dip"
                android:layout_height="@dimen/size_70dip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="一级大蒜 |5000.00斤 |价格："/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/data_text"
                    android:text="李先生"/>
                <TextView
                    android:id="@+id/tv_desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_405db4"
                    android:layout_marginBottom="@dimen/size_5dip"
                    android:layout_marginTop="@dimen/size_5dip"
                    android:layout_marginRight="15dip"
                    android:visibility="gone"
                    android:text="招工：挖蒜工人20人，工资150元/天"/>

                <TextView
                        android:id="@+id/tv_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/data_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:text="工作时间：8：00-12：00下午13：00-18：00"/>

                <TextView
                    android:id="@+id/tv_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/data_text"
                    android:layout_marginBottom="@dimen/size_5dip"
                    android:layout_marginTop="@dimen/size_5dip"
                    android:layout_marginRight="15dip"
                    android:text="工作描述:无虫害，圆润5公斤大小，无虫害。圆润5公斤大小"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dip"
        android:background="@color/hint_gray"
        android:layout_marginTop="5dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_liuyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给他留言"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/data_text"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="40dp"
        android:background="@color/hint_gray"
        />
    <TextView
        android:id="@+id/tv_baojia"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="向他报价"
        android:gravity="center"
        android:textColor="@color/red"/>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5dip"
        android:background="@color/gray_d6"
        />
</LinearLayout>