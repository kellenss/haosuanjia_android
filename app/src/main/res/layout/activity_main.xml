            android:clickable="true"
            android:drawablePadding="@dimen/size_2dip"
            android:text="论坛"
            android:textColor="@color/color_666666"
            android:textSize="10sp"
            myradio:drawableTop="@drawable/bg_checkbox_icon_menu_1"
            myradio:drawableWH="28dp" />-->

        <suanhang.jinan.com.suannihen.view.MyRadioButton
            android:id="@+id/main_tab_mine"
            style="@style/MMTabButton"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawablePadding="@dimen/size_2dip"
            android:text="我"
            android:textColor="@color/color_666666"
            android:textSize="10sp"
            myradio:drawableTop="@drawable/bg_checkbox_icon_menu_4"
            myradio:drawableWH="28dp" />
    </RadioGroup>

