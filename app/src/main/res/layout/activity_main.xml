<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dp" />

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RadioGroup
        xmlns:myradio="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_tab_group"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_50dip"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <suanhang.jinan.com.suannihen.view.MyRadioButton
            android:id="@+id/main_tab_main"
            style="@style/MMTabButton"
            android:layout_weight="1.0"
            android:checked="true"
            android:clickable="true"
            android:text="首页"
            android:textColor="@color/color_main"
            android:textSize="10sp"

            myradio:drawableTop="@drawable/bg_checkbox_icon_menu_5"
            myradio:drawableWH="28dp" />

        <suanhang.jinan.com.suannihen.view.MyRadioButton
            android:id="@+id/main_tab_quotation"
            style="@style/MMTabButton"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawablePadding="@dimen/size_2dip"
            android:text="大蒜行情"
            android:textColor="@color/color_666666"
            android:textSize="10sp"
            myradio:drawableTop="@drawable/bg_checkbox_icon_menu_1"
            myradio:drawableWH="28dp" />

        <suanhang.jinan.com.suannihen.view.MyRadioButton
            android:id="@+id/main_tab_business"
            style="@style/MMTabButton"
            android:layout_weight="1.0"
            android:checked="false"
            android:clickable="true"
            android:drawablePadding="@dimen/size_2dip"
            android:text="买卖需求"
            android:textColor="@color/color_666666"
            android:textSize="10sp"
            myradio:drawableTop="@drawable/bg_checkbox_icon_menu_2"
            myradio:drawableWH="28dp" />

      <!--  <suanhang.jinan.com.suannihen.view.MyRadioButton
