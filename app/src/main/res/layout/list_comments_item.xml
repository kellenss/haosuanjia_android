<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_item_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:gravity="center_vertical"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comments_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="你想吗"
            android:textColor="@color/color_405db4"
            android:textSize="14sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="你想吗"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/size_5dip"
            android:layout_toRightOf="@+id/tv_comments_username"
            android:textSize="14sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_comments_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="@dimen/size_2dip"
            android:layout_below="@+id/tv_comments_username"
            android:text="#内容"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
            />
    </RelativeLayout>


</LinearLayout>