<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
    android:id="@+id/inc"
    layout="@layout/include_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20sp"
            android:padding="20dp"/>
        <ImageView
            android:id="@+id/iv_company_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/size_20sp"
            />
        <WebView
            android:id="@+id/wv_content_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_comments_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/black"
                android:hint="请输入评论内容"
                android:textColorHint="@color/gray"
                android:padding="@dimen/size_3dip"
                android:background="@drawable/bg_radius_2dp_trans_maincolor"/>
            <TextView
                android:id="@+id/tv_comments_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_3dip"
                android:paddingBottom="@dimen/size_3dip"
                android:background="@drawable/bg_50dp_chatprice"
                android:layout_weight="4"
                android:text="评论"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
