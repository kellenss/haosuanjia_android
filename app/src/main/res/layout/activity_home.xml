                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_10dip" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_15dip"
                android:paddingBottom="@dimen/size_15dip"
                android:gravity="center_horizontal"
                android:background="@color/white"
                >
                <LinearLayout
                    android:id="@+id/ll_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/iv_home_icon7"
                        android:layout_width="@dimen/size_94dip"
                        android:layout_height="@dimen/size_78dip"
                        android:background="@mipmap/icon_commpony"/>
                    <TextView
                        android:layout_width="wrap_content"
