    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left_margin"
            android:layout_marginLeft="@dimen/title_left_margin"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_home_search"
            android:visibility="gone"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left_margin"
            android:layout_marginLeft="@dimen/title_left_margin"
            android:layout_height="wrap_content"
            android:text="金乡"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="请输入关键字"
            android:visibility="gone"
            android:textColorHint="@color/gray_temp_detail"
            android:singleLine="true"
            android:ellipsize="middle"
            android:drawableLeft="@mipmap/icon_home_search_img"
            android:paddingLeft="@dimen/size_12dip"
            android:background="@mipmap/icon_home_head_bg"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_height="32dp"
            android:layout_width="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/title_left_margin"
            android:layout_marginRight="@dimen/title_left_margin"
            android:background="@mipmap/icon_all_brand"
            android:visibility="visible" />

